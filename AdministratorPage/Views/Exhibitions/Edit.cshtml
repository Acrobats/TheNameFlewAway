@model AdministratorPage.Models.Exhibition

@{
    ViewBag.Title = "作品展示管理";
    Layout = "~/Views/shared/_LayoutMain.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Exhibition</h4>
        <hr />
        @Html.HiddenFor(model => model.id)

        <div class="form-row w-100">
            @Html.Label("作品名", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control col-md-10" } })
        </div>
        <div class="form-row w-100">
            @Html.Label("作者", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.author, new { htmlAttributes = new { @class = "form-control col-md-10" } })
        </div>

        <div class="form-row w-100">
            @Html.Label("效果图片", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.showimage, new { htmlAttributes = new { @class = "form-control col-md-10" } })
            <input type="file" name="picture" id="picture" onchange="pictureChange();" /><br />
            <script>
                function pictureChange() {
                    var files = document.getElementById("picture").files;
                    //alert(files[0].name);
                    document.getElementById("showimage").value = files[0].name;
                }
            </script>
        </div>

        <div class="form-row w-100">
            @Html.Label("作品类别", htmlAttributes: new { @class = "control-label col-2" })
            @Html.DropDownListFor(model => model.typeid, ViewBag.TypeList as SelectList, new { @class = "form-control col-10" })
        </div>

        <div class="form-row w-100">
            @Html.Label("资源地址", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.resourceaddress, new { htmlAttributes = new { @class = "form-control col-md-10" } })
            <input type="file" name="file" id="file" onchange="change();" /><br />
            <script>
                function change() {
                    var files = document.getElementById("file").files;
                    //alert(files[0].name);
                    document.getElementById("resourceaddress").value = files[0].name;
                }
            </script>
        </div>

        <div class="form-row w-100">
            @Html.Label("描述", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextAreaFor(model => model.description, new { @class = "form-control col-md-10", @rows = "5" })
        </div>

        <div class="form-row w-100 justify-content-center">
            <input type="submit" value="保存" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回", "Index")
</div>