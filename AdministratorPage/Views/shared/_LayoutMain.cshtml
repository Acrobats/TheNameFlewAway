@{
    if (Request.Cookies["Name"] == null)
    {
        Response.Redirect("/Home");
    }
    ViewBag.Name= "管理员";
    ViewContext.ViewBag.Title = "后台管理";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - @ViewContext.ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/cover.css" rel="stylesheet" />
</head>
<body class="text-center">
    <div class="container">
        <div class="d-flex p-3 mx-auto flex-column">
            <header class="masthead mb-auto">
                <div class="inner">
                    <h3 class="masthead-brand">@ViewContext.ViewBag.Title</h3>
                    <div class="d-flex float-right">
                        <div class="dropdown nav-masthead">
                            <a class="nav-link active dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @ViewBag.Title
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="/Users/Index">用户管理</a>
                                <a class="dropdown-item" href="/Resources/Index">资源管理</a>
                                <a class="dropdown-item" href="/Knowledges/Index">基础知识管理</a>
                                <a class="dropdown-item" href="/AdvanceKnowledges/Index">进阶知识管理</a>
                                <a class="dropdown-item" href="/ExpandKnowledges/Index">拓展知识管理</a>
                                <a class="dropdown-item" href="/Instances/Index">实例教程管理</a>
                                <a class="dropdown-item" href="/Exhibitions/Index">作品展示管理</a>
                                @*<a class="dropdown-item" href="#">Another action</a>
        <a class="dropdown-item" href="#">Something else here</a>*@
                            </div>
                        </div>
                        <div class="dropdown nav-masthead">
                            <a class="nav-link active dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @ViewBag.Name
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="/Home/SignOut">退出</a>
                                @*<a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>*@
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            
            <main role="main" class="inner cover">
                @RenderBody()
            </main>

            <footer class="mastfoot mt-auto">
                <div class="inner">
                    <p>@DateTime.Now.Year - <a href="mailto:bingqiang_zhou@qq.com">@@Bingqiang Zhou</a>.</p>
                </div>
            </footer>
        </div>
    </div>
    <script type="text/javascript" src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    @*<script type="text/javascript" src="~/Scripts/main.js"></script>*@
</body>
</html>
