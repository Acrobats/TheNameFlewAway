@model AdministratorPage.Models.Knowledge

@{
    ViewBag.Title = "基础知识管理";
    Layout = "~/Views/shared/_LayoutMain.cshtml";
}

<h4>添加基础知识</h4>


@using (Html.BeginForm("Create", "Resources", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @*<h4>Knowledge</h4>*@
    <hr />
    <div class="form-row w-100">
        @Html.Label("关键词", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.key, new { htmlAttributes = new { @class = "form-control col-md-10" } })
    </div>
    <div class="form-row w-100">
        @Html.Label("基本描述", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.TextAreaFor(model => model.description, new { @class = "form-control col-md-10", @rows = "5", @maxlength = "1000" })
    </div>
    <div class="form-row w-100">
        @Html.Label("具体内容", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.TextAreaFor(model => model.context, new { @class = "form-control col-md-10", @rows = "5", @maxlength = "1000" })
    </div>

    <div class="form-row w-100">
        @Html.Label("资源地址", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.resourceAddress, new { htmlAttributes = new { @class = "form-control col-md-10" } })
        <input type="file" name="file" id="file" onchange="change();" /><br />
        <script>
            function change() {
                var files = document.getElementById("file").files;
                //alert(files[0].name);
                document.getElementById("resourceAddress").value = files[0].name;
            }
        </script>
    </div>

    <div class="form-row w-100 justify-content-center">
        <input type="submit" value="添加" class="btn btn-default" />
    </div>
</div>
}

<div>
    @Html.ActionLink("返回", "Index")
</div>