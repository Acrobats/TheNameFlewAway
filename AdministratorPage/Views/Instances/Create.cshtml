@model AdministratorPage.Models.Instance

@{
    ViewBag.Title = "实例教程管理";
    Layout = "~/Views/shared/_LayoutMain.cshtml";
}

<h4>添加实例</h4>


@using (Html.BeginForm("Create", "Instances", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Instance</h4>*@
        <hr />

        <div class="form-row w-100">
            @Html.Label("关键字", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.key, new { htmlAttributes = new { @class = "form-control col-md-10" } })
        </div>

        <div class="form-row w-100">
            @Html.Label("题目", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextAreaFor(model => model.title, new { @class = "form-control col-md-10", @rows = "2", @maxlength = "128" })
        </div>

        <div class="form-row w-100">
            @Html.Label("题目分析", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextAreaFor(model => model.context, new { @class = "form-control col-md-10", @rows = "5", @maxlength = "1000" })
        </div>

        <div class="form-row w-100">
            @Html.Label("代码以及注解", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextAreaFor(model => model.code, new { @class = "form-control col-md-10", @rows = "5", @maxlength = "1000" })
        </div>

        <div class="form-row w-100">
            @Html.Label("资源地址", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.resourceAddress, new { htmlAttributes = new { @class = "form-control col-md-10" } })
            <input type="file" name="file" id="file" onchange="change();" /><br />
            <script>
                function change() {
                    var files = document.getElementById("file").files;
                    //alert(files[0].name);
                    document.getElementById("resourceAddress").value = files[0].name;
                }
            </script>
        </div>

        <div class="form-row w-100 justify-content-center">
            <input type="submit" value="添加" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回", "Index")
</div>