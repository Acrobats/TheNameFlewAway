@model AdministratorPage.Models.AdvanceKnowledge

@{
    ViewBag.Title = "进阶知识管理";
    Layout = "~/Views/shared/_LayoutMain.cshtml";
}

<h4>进阶知识详情</h4>

<div>
    @*<h4>AdvanceKnowledge</h4>*@
    @Html.ActionLink("添加知识点", "AddKnowledge", new { id = Model.id })
    <hr />
    <table class="table">
        <tr>
            <th>
                关键字@*@Html.DisplayNameFor(model => model.key)*@
            </th>
            <th>
                描述@*@Html.DisplayNameFor(model => model.description)*@
            </th>
            <th>
                内容@*@Html.DisplayNameFor(model => model.context)*@
            </th>
            <th>
                操&nbsp;作
            </th>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(model => model.key)
            </td>
            <td>
                @Html.DisplayFor(model => model.description)
            </td>
            <td>
                @Html.DisplayFor(model => model.context)
            </td>
            <td>
                @*@Html.ActionLink("编辑", "Edit", new { id = Model.id })*@
                @Html.ActionLink("返回", "Index")
            </td>
        </tr>
    </table>
    @if (ViewBag.Konwledge.Count > 0)
    {
        <hr />
        <h5>包含知识点</h5>
        <table class="table">
            <tr>
                <th>
                    关键字@*@Html.DisplayNameFor(model => model.key)*@
                </th>
                <th>
                    描述@*@Html.DisplayNameFor(model => model.description)*@
                </th>
                <th>
                    资源地址@*@Html.DisplayNameFor(model => model.context)*@
                </th>
                <th>
                    操&nbsp;作
                </th>
            </tr>
            @foreach (var item in ViewBag.Konwledge)
            {
                <tr>
                    <td>
                        @item.name
                    </td>
                    <td>
                        @item.description
                    </td>
                    <td>
                        @item.address
                    </td>
                    <td>
                        @Html.ActionLink("编辑", "EditKnowledge", new { id = Model.id, resourceid = item.id })
                        @Html.ActionLink("删除", "DeleteKnowledge", new { id = Model.id,resourceid = item.id })
                    </td>
                </tr>
            }
        </table>
    }
</div>
